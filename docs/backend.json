{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the LandEase application.",
      "properties": {
        "uid": {
          "type": "string",
          "description": "Unique identifier for the user, matching Firebase Auth UID."
        },
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        },
        "displayName": {
          "type": "string",
          "description": "The display name of the user."
        },
        "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "The timestamp when the user was created."
        },
        "pages": {
            "type": "array",
            "description": "An array of page references owned by the user.",
            "items": {
                "type": "object",
                "properties": {
                    "pageId": { "type": "string" },
                    "pageName": { "type": "string" }
                },
                "required": ["pageId", "pageName"]
            }
        }
      },
      "required": [ "uid", "email", "createdAt" ]
    },
    "Page": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "Page",
        "type": "object",
        "description": "Represents a single landing page created by a user.",
        "properties": {
            "userId": {
                "type": "string",
                "description": "The UID of the user who owns this page."
            },
            "pageName": {
                "type": "string",
                "description": "The name of the landing page."
            },
            "content": {
                "type": "array",
                "description": "The JSON structure representing the page's components."
            },
            "createdAt": {
                "type": "string",
                "format": "date-time"
            },
            "lastUpdated": {
                "type": "string",
                "format": "date-time"
            },
            "published": {
                "type": "boolean",
                "description": "Indicates if the page is publicly accessible."
            },
            "pageBackgroundColor": {
                "type": "string"
            }
        },
        "required": ["userId", "pageName", "content", "published"]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/entities/User"
          },
          "description": "Stores user profiles, indexed by their unique Firebase Auth ID."
        }
      },
      {
        "path": "/pages/{pageId}",
        "definition": {
          "entityName": "Page",
          "schema": {
            "$ref": "#/entities/Page"
          },
          "description": "Stores all landing pages created by users."
        }
      }
    ]
  }
}
